<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>Aura AI ‚Äî powered by WASM AI</title>
<meta name="viewport" content="width=device-width, initial-scale=1.0">

<link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;600;800&display=swap" rel="stylesheet">

<style>
:root{
  --bg:#05070c;
  --glass:rgba(255,255,255,.08);
  --stroke:rgba(255,255,255,.18);
  --text:#fff;
  --accent:#00f2ff;
  --danger:#ff2b2b;
}
.light{
  --bg:#eef1f7;
  --glass:rgba(255,255,255,.65);
  --stroke:rgba(0,0,0,.15);
  --text:#111;
  --accent:#005bff;
}
*{margin:0;padding:0;box-sizing:border-box}
body{
  background:radial-gradient(circle at top,#0b1020,#000);
  color:var(--text);
  font-family:Orbitron,system-ui;
  height:100vh;
  overflow:hidden;
}

/* ---------- LOGIN ---------- */
#login{
  position:fixed;
  inset:0;
  display:flex;
  align-items:center;
  justify-content:center;
  flex-direction:column;
  z-index:10;
}
.orb{
  width:120px;height:120px;
  border-radius:50%;
  background:radial-gradient(circle at 30% 30%,#2af,#000);
  box-shadow:0 0 80px rgba(0,242,255,.5);
  display:flex;
  align-items:center;
  justify-content:center;
  margin-bottom:30px;
  transition:.6s;
}
.eye{
  width:44px;height:44px;
  background:#fff;
  border-radius:50%;
  display:flex;
  align-items:center;
  justify-content:center;
}
.eye.red{background:var(--danger)}
.pupil{
  width:14px;height:14px;
  background:#000;border-radius:50%;
  transition:.1s;
}
.mouth{
  position:absolute;
  width:30px;height:12px;
  border-bottom:3px solid var(--danger);
  border-radius:0 0 30px 30px;
  opacity:0;
  bottom:22px;
}
@keyframes shake{
  0%{transform:rotate(0)}
  25%{transform:rotate(-6deg)}
  50%{transform:rotate(6deg)}
  75%{transform:rotate(-6deg)}
  100%{transform:rotate(0)}
}

.card{
  width:320px;
  padding:26px;
  background:var(--glass);
  backdrop-filter:blur(28px);
  border:1px solid var(--stroke);
  border-radius:26px;
  text-align:center;
}
.card h1{font-size:20px;margin-bottom:6px}
.card p{opacity:.7;font-size:12px;margin-bottom:16px}
input,button,select{
  width:100%;
  padding:14px;
  border-radius:14px;
  border:none;
  outline:none;
  margin-top:12px;
  font-family:inherit;
}
button{
  background:linear-gradient(90deg,#00f2ff,#6cf);
  font-weight:700;
  cursor:pointer;
}

/* ---------- APP ---------- */
#app{display:none;height:100vh}
header{
  padding:16px;
  display:flex;
  justify-content:space-between;
  align-items:center;
}
.menuBtn{font-size:24px;cursor:pointer}

#menuOverlay{
  position:fixed;inset:0;
  background:rgba(0,0,0,.4);
  backdrop-filter:blur(6px);
  display:none;
  z-index:999;
}
.menuPanel{
  position:absolute;
  top:70px;right:16px;
  width:260px;
  background:var(--glass);
  border:1px solid var(--stroke);
  border-radius:22px;
  padding:12px;
}
.menuPanel button{
  background:none;
  color:var(--text);
  text-align:left;
}

#page{
  padding:16px;
  display:flex;
  flex-direction:column;
  gap:16px;
}
.glassCard{
  padding:18px;
  background:var(--glass);
  border:1px solid var(--stroke);
  border-radius:22px;
}

nav{
  position:fixed;
  bottom:14px;
  left:50%;
  transform:translateX(-50%);
  display:flex;
  gap:10px;
}
nav button{
  background:var(--glass);
  color:var(--text);
}

/* camera */
video,canvas{width:100%;border-radius:16px;margin-top:12px}
</style>
</head>

<body>

<!-- LOGIN -->
<div id="login">
  <div class="orb" id="orb">
    <div class="eye" id="eye"><div class="pupil" id="pupil"></div></div>
    <div class="mouth" id="mouth"></div>
  </div>

  <div class="card">
    <h1>AURA BIO-PORTAL</h1>
    <p>Identity verification required</p>
    <input id="password" type="password" placeholder="Access Key">
    <button id="enter">AUTHENTICATE ACCESS</button>
  </div>
</div>

<!-- APP -->
<div id="app">
<header>
  <div>Aura AI</div>
  <div class="menuBtn" onclick="toggleMenu()">‚ãÆ</div>
</header>

<div id="menuOverlay" onclick="toggleMenu()">
  <div class="menuPanel" onclick="event.stopPropagation()">
    <button onclick="toggleTheme()">üåó Theme</button>
    <button onclick="openLanguage()">üåç Language</button>
    <button onclick="openProfile()">üë§ Profile</button>
    <button onclick="openSettings()">‚öô Settings</button>
  </div>
</div>

<div id="page"></div>

<nav>
  <button onclick="home()">Living</button>
  <button onclick="fitness()">Fitness</button>
  <button onclick="growth()">Growth</button>
  <button onclick="aura()">Aura</button>
</nav>
</div>

<script>
/* ---------- LOGIN FIX ---------- */
const eye=document.getElementById("eye"),
pupil=document.getElementById("pupil"),
orb=document.getElementById("orb"),
mouth=document.getElementById("mouth"),
pass=document.getElementById("password"),
enter=document.getElementById("enter"),
login=document.getElementById("login"),
app=document.getElementById("app");

document.addEventListener("mousemove",e=>{
  const r=eye.getBoundingClientRect();
  pupil.style.transform=`translate(${(e.clientX-(r.left+r.width/2))/12}px,${(e.clientY-(r.top+r.height/2))/12}px)`;
});

enter.onclick=()=>{
  if(pass.value!=="nopassword"){
    eye.classList.add("red");
    mouth.style.opacity=1;
    orb.style.animation="shake .4s";
    setTimeout(()=>{
      eye.classList.remove("red");
      mouth.style.opacity=0;
      orb.style.animation="";
    },500);
    return;
  }
  orb.style.transform="scale(15)";
  login.style.opacity=0;
  setTimeout(()=>{
    login.style.display="none";
    app.style.display="block";
    home();
  },700);
};

/* ---------- STATE ---------- */
let profile=JSON.parse(localStorage.getItem("profile")||"{}");
let streak=Number(localStorage.getItem("streak")||0);
let last=localStorage.getItem("last");

/* ---------- MENU ---------- */
function toggleMenu(){
  menuOverlay.style.display=menuOverlay.style.display==="block"?"none":"block";
}
function toggleTheme(){
  document.body.classList.toggle("light");
}

/* ---------- PAGES ---------- */
function home(){
  const d=new Date().toDateString();
  if(last!==d){
    streak++;localStorage.setItem("streak",streak);localStorage.setItem("last",d);
  }
  page.innerHTML=`<div class="glassCard">
    <h2>Living</h2>
    <p>User: ${profile.name||"Unregistered"}</p>
    <p>${d}</p>
    <p>Streak: ${streak}</p>
  </div>`;
}

function fitness(){
  page.innerHTML=`<div class="glassCard">
    <h2>Fitness Engine</h2>
    <p id="m">Move to begin</p>
    <video id="v" autoplay></video>
    <canvas id="c"></canvas>
  </div>`;
  navigator.mediaDevices.getUserMedia({video:true}).then(s=>{
    v.srcObject=s;
    const ctx=c.getContext("2d");
    let last=null,reps=0;
    setInterval(()=>{
      ctx.drawImage(v,0,0,c.width=v.videoWidth,c.height=v.videoHeight);
      const d=ctx.getImageData(0,0,c.width,c.height).data;
      if(last){
        let diff=0;
        for(let i=0;i<d.length;i+=4) diff+=Math.abs(d[i]-last[i]);
        if(diff>1500000){reps++;m.innerText="Movement detected: "+reps;}
      }
      last=d.slice();
    },200);
  });
}

function growth(){
  page.innerHTML=`<div class="glassCard">
    <h2>Growth</h2>
    <p>Consistency: ${Math.min(100,streak)}%</p>
  </div>`;
}

function aura(){
  page.innerHTML=`<div class="glassCard">
    <h2>Aura AI</h2>
    <input id="q" placeholder="Ask anything">
    <button onclick="ask()">Ask</button>
    <div id="a"></div>
  </div>`;
}
function ask(){
  const q=document.getElementById("q").value.toLowerCase();
  let r="Reasoning requires constraints.";
  if(/\d+/.test(q)) r="I can calculate numbers logically.";
  if(/muscle|exercise/.test(q)) r="Muscles grow through load, volume, and recovery.";
  if(/why|how/.test(q)) r="Explain the goal and constraints.";
  document.getElementById("a").innerText=r;
}
</script>
</body>
</html>
